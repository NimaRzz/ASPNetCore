@page
@model Project.Presentation.Areas.Admin.Pages.Roles.ListModel 
@{
	ViewData["Title"] = "List Roles";
}

<table class="table table-striped table-bordered">
	<tr>
		<th>Name</th>
		<th>Actions</th>
	</tr>
	@if (Model.Roles.Count() < 1)
	{
		<tr>
			<td style="font-size:20px" class="text-center" colspan="4">There is no role in database<br /><a asp-page="Add" class="btn btn-success">Add</a></td>
		</tr>
	}
	else
	{

		@foreach (var item in Model.Roles)
		{
			<tr>
				<td>@item.Name</td>
				<td>
					<form method="post">
						<input type="hidden" value="@item.Name" name="Name" />
						<input type="submit" class="btn btn-danger" value="Delete" />
					</form>
				</td>

			</tr>
		}
	}
</table>