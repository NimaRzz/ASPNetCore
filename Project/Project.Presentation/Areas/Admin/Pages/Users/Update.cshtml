@page "{Id}"
@model Project.Presentation.Areas.Admin.Pages.Users.UpdateModel
@{
	ViewData["Title"] = "Update User";
}

<div class="input-group">
	<form method="post">
		<div asp-validation-summary="All" class="text-danger"></div>

		<label asp-for="UserName">Username: </label>
		<input type="text" class="form-control col-4" asp-for="UserName" value="@Model.UserName" />

		<br />
		<label asp-for="Email">Email: </label>
		<input type="text" class="form-control col-4" asp-for="Email" value="@Model.Email" />

		<br />
		<label asp-for="Password">Password: </label>
		<input type="password" class="form-control col-4" asp-for="Password" />

		<br />
		
		<button type="submit" class="btn btn-success">Update</button>
		<a asp-page="List" class="btn btn-info">Back</a>
	</form>


</div>