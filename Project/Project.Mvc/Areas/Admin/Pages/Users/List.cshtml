@page 
@model Project.Presentation.Areas.Admin.Pages.Users.ListModel
@{
}
<table class="table table-striped table-bordered">
	<tr>
		<th>Username</th>
		<th>Email</th>
		<th>Actions</th>
	</tr>
	    @if (Model.Users.Count() < 1){
			<tr>
				<td style="font-size:20px" class="text-center" colspan="4">There is no user in database<br /><a asp-page="Add" class="btn btn-success">Add</a></td>
			</tr>
		}
		else{

		@foreach (var item in Model.Users){
	<tr>
			<td>@item.UserName</td>
			<td>@item.Email</td>
			<td>
				<form method="post">
				<input type="hidden" value="@item.Id" name="Id" />
					<a asp-page="Update" asp-route-Id="@item.Id" class="btn btn-primary">Update</a>
				<input type="submit" class="btn btn-danger" value="Delete" />
				</form>
			</td>

	</tr>
		}
		}
</table>