@page
@model Project.Presentation.Areas.Admin.Pages.Account.LoginModel
@{
	ViewData["Title"] = "Login";
}
<h1 class="text-center">UserLogin</h1>

<div class="input-group">
	<form method="post">
		<div asp-validation-summary="All" class="text-danger"></div>

		<input type="hidden" asp-for="ReturnUrl" />

		<label asp-for="UserName">Username: </label>
		<input type="text" class="form-control col-4" asp-for="UserName" />

		<br />
		<label asp-for="Password">Password: </label>
		<input type="password" class="form-control col-4" asp-for="Password" />

		<br />
		<label asp-for="RememberMe">RememberMe: </label>
		<input type="checkbox" asp-for="RememberMe" />

		<br />
		<br />
		<button type="submit" class="btn btn-success">Login</button>
	</form>


</div>